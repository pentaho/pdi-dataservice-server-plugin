<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
  http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
  ">
    <bean id="dialogTab" class="com.pentaho.di.trans.dataservice.ui.DataServiceTransDialogTab" scope="prototype"/>
    <bean id="dialogTabPlugin" class="org.pentaho.di.osgi.OSGIPlugin" scope="prototype">
        <property name="mainType" value="org.pentaho.di.ui.trans.dialog.TransDialogPluginInterface"/>
        <property name="name" value="Data service transformation dialog tab plugin"/>
        <property name="ID" value="DataServiceTransDialogTab"/>
        <property name="description" value="This plugin makes sure there's an extra 'Data Service' tab in the transformation settings dialog"/>
        <property name="category" value="Data Service"/>
        <property name="pluginTypeInterface" value="org.pentaho.di.ui.trans.dialog.TransDialogPluginType"/>
        <property name="classToBeanMap">
            <map>
                <entry key="org.pentaho.di.ui.trans.dialog.TransDialogPluginInterface" value="dialogTab"/>
            </map>
        </property>
    </bean>
    <service id="dialogTabPluginService" interface="org.pentaho.di.core.plugins.PluginInterface" ref="dialogTabPlugin">
        <service-properties>
            <entry key="PluginType" value="org.pentaho.di.ui.trans.dialog.TransDialogPluginType"/>
        </service-properties>
    </service>

    <bean id="dataServicePainter" scope="singleton" class="com.pentaho.di.trans.dataservice.ui.TransPainterStepExtensionPointPlugin"/>
    <bean id="dataServicePainterPlugin" scope="singleton" class="org.pentaho.di.osgi.OSGIPlugin">
        <property name="mainType" value="org.pentaho.di.core.extension.ExtensionPointInterface"/>
        <property name="name" value="TransPainterStep"/>
        <property name="ID" value="DataServicePainter"/>
        <property name="description" value="Paint a database icon on the Data Service step"/>
        <property name="pluginTypeInterface" value="org.pentaho.di.core.extension.ExtensionPointPluginType"/>
        <property name="category" value="Data Service"/>
        <property name="classToBeanMap">
            <map>
                <entry key="org.pentaho.di.core.extension.ExtensionPointInterface" value="dataServicePainter"/>
            </map>
        </property>
    </bean>
    <service id="dataServicePainterService" interface="org.pentaho.di.core.plugins.PluginInterface" ref="dataServicePainterPlugin">
        <service-properties>
            <entry key="PluginType" value="org.pentaho.di.core.extension.ExtensionPointPluginType"/>
        </service-properties>
    </service>

    <bean id="listDataServlet" class="com.pentaho.di.trans.dataservice.www.ListDataServicesServlet" scope="singleton"/>
    <bean id="listDataServletPlugin" class="org.pentaho.di.osgi.OSGIPlugin" scope="singleton">
        <property name="mainType" value="org.pentaho.di.www.CartePluginInterface"/>
        <property name="name" value="List data services"/>
        <property name="ID" value="listServices"/>
        <property name="description" value="List all the available PDI Data Services"/>
        <property name="category" value="Data Service"/>
        <property name="pluginTypeInterface" value="org.pentaho.di.core.plugins.CartePluginType"/>
        <property name="classToBeanMap">
            <map>
                <entry key="org.pentaho.di.www.CartePluginInterface" value="listDataServlet"/>
            </map>
        </property>
    </bean>
    <service id="listDataServletService" interface="org.pentaho.di.core.plugins.PluginInterface" ref="listDataServletPlugin">
        <service-properties>
            <entry key="PluginType" value="org.pentaho.di.core.plugins.CartePluginType"/>
        </service-properties>
    </service>

    <bean id="dataServlet" class="com.pentaho.di.trans.dataservice.www.TransDataServlet" scope="singleton"/>
    <bean id="dataServletPlugin" class="org.pentaho.di.osgi.OSGIPlugin" scope="singleton">
        <property name="mainType" value="org.pentaho.di.www.CartePluginInterface"/>
        <property name="name" value="Data Service Query"/>
        <property name="ID" value="dataService"/>
        <property name="description" value="Run PDI Data Service Query"/>
        <property name="category" value="Data Service"/>
        <property name="pluginTypeInterface" value="org.pentaho.di.core.plugins.CartePluginType"/>
        <property name="classToBeanMap">
            <map>
                <entry key="org.pentaho.di.www.CartePluginInterface" value="dataServlet"/>
            </map>
        </property>
    </bean>
    <service id="dataServletService" interface="org.pentaho.di.core.plugins.PluginInterface" ref="dataServletPlugin">
        <service-properties>
            <entry key="PluginType" value="org.pentaho.di.core.plugins.CartePluginType"/>
        </service-properties>
    </service>
</blueprint>
