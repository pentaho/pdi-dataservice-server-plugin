<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
  <info organisation="${ivy.artifact.group}" module="${ivy.artifact.id}" revision="${project.revision}" />

  <configurations>
    <conf name="default" />
    <conf name="test" visibility="private" />
  </configurations>

  <publications>
    <artifact name="${ivy.artifact.id}" type="jar" conf="default" />
  </publications>

  <dependencies defaultconf="default->default">

    <dependency org="org.apache.jackrabbit"   name="jackrabbit-core"        rev="1.6.0" />
    <!-- public repo has Maven packaging element as "bundle"; even publishing it to external Pentaho repo doesn't fix
    problem; so the ultimate solution is to use a version that doesn't exist in the public repo; THIS JAR HAS NO PENTAHO
    CHANGES TO IT -->
    <dependency org="org.apache.jackrabbit"   name="jackrabbit-jcr-rmi"     rev="1.5.0-PENTAHO" />
  
    <dependency org="pentaho.kettle" name="kettle-core" rev="${dependency.kettle.revision}" transitive="true" changing="true" />
    <dependency org="pentaho.kettle" name="kettle-db" rev="${dependency.kettle.revision}" transitive="true" changing="true" />
    <dependency org="pentaho.kettle" name="kettle-engine" rev="${dependency.kettle.revision}" transitive="true" changing="true" />
    <dependency org="pentaho.kettle" name="kettle-ui-swt" rev="${dependency.kettle.revision}" transitive="true" changing="true" />
    <dependency org="pentaho"        name="pentaho-ee-dsc-core" rev="${dependency.pentaho-ee-dsc.revision}" changing="true"   transitive="true"/>
        
    <dependency org="commons-collections" name="commons-collections" rev="3.1"/>
    <dependency org="commons-io" name="commons-io" rev="1.3.1"/>
    <dependency org="concurrent" name="concurrent" rev="1.3.4"/>
    <dependency org="javax.jcr" name="jcr" rev="1.0"/>
    <dependency org="log4j" name="log4j" rev="1.2.8"/>
    <dependency org="org.slf4j" name="slf4j-log4j12" rev="1.5.8"/>
    <dependency org="log4j" name="log4j" rev="1.2.8"/>
    <dependency org="xerces" name="xercesImpl" rev="2.8.1"/>
    <dependency org="xml-apis" name="xml-apis" rev="1.0.b2"/>
    <dependency org="log4j" name="log4j" rev="1.2.8"/>

    
    <!--  undetermined dependencies from libext -->
   <!--   <dependency org="org.apache.derby" name="derby" rev="10.2.2.0"/>  -->

    <!--  test dependencies -->
    <dependency org="junit"           		name="junit"              	rev="4.4" 	conf="test->default"/>
    <dependency org="commons-logging"   	name="commons-logging"   	rev="1.1" 	conf="test->default"/>
    <dependency org="commons-digester"  	name="commons-digester"    	rev="1.8" 	conf="test->default"/>
    <dependency org="commons-vfs"   		name="commons-vfs"    		rev="1.0" 	conf="test->default"/>
    <dependency org="commons-lang"   		name="commons-lang"    		rev="2.4" 	conf="test->default"/>
    <dependency org="commons-httpclient"   	name="commons-httpclient"   rev="3.0.1" conf="test->default"/>
    <dependency org="ognl"    				name="ognl"       			rev="2.6.9" conf="test->default"/>
    <dependency org="org.springframework"   name="spring-core"       	rev="2.5.6" conf="test->default"/>
    <dependency org="pentaho"               name="pentaho-ee-mock-dsc"  rev="${dependency.pentaho-ee-dsc.revision}" changing="true" conf="test->default" transitive="true"/>



  </dependencies>
</ivy-module>
